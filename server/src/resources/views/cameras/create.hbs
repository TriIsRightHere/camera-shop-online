<div class="mt-4">
    <h3>Your camera here</h3>
    <form method="POST" action"/cameras/store">
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Name</label>
            <input type="text" name="name" class="form-control" id="name" placeholder="eg: Leica Q3">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Description</label>
            <textarea class="form-control" name="description" id="description" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Add your camera</button>
    </form>
</div>