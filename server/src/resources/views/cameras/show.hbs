<div
    class="flex flex-col md:flex-row items-start justify-between p-6 bg-gray-100 dark:bg-gray-800 rounded-lg shadow-lg">
    <div class="w-full md:w-1/3 flex flex-wrap justify-around">
        <img src="/placeholder.svg" alt="Product Image 1" width="200" height="200"
            class="object-cover w-full rounded-lg mb-6 md:mb-0" style="aspect-ratio: 200 / 200; object-fit: cover;" />
        <div class="grid grid-cols-3 gap-2 w-full">
            <img src="/placeholder.svg" alt="Product Image 2" width="100" height="100"
                class="object-cover w-full rounded-lg" style="aspect-ratio: 100 / 100; object-fit: cover;" />
            <img src="/placeholder.svg" alt="Product Image 3" width="100" height="100"
                class="object-cover w-full rounded-lg" style="aspect-ratio: 100 / 100; object-fit: cover;" />
            <img src="/placeholder.svg" alt="Product Image 4" width="100" height="100"
                class="object-cover w-full rounded-lg" style="aspect-ratio: 100 / 100; object-fit: cover;" />
        </div>
    </div>
    <div class="w-full md:w-2/3 md:ml-6">
        <h2 class="text-2xl md:text-4xl font-bold mb-2">{{camera.name}}</h2>
        <p class="text-lg text-gray-700 dark:text-gray-300 mb-6">{{camera.description}}</p>
        <p class="text-xl md:text-3xl font-semibold mb-6">$99.99</p>
        <button
            class="inline-flex items-center justify-center ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 w-full md:w-auto py-3 px-6 text-lg font-semibold rounded-lg">
            Add to Cart
        </button>
    </div>
</div>